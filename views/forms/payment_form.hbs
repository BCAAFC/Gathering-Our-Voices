{{{form_input title="Date of Payment" name="date" type="date" value=(date date)
    description="Should be <code>MM-DD-YYYY</code>."}}}
{{{form_input title="Amount" name="amount" type="number"  value=amount required=true
    description="The amount (in CAD) of the payment."}}}
{{{form_input title="Number" name="number" type="text"  value=number required=true
    description="An optional cheque or invoice number. <strong>Not a credit card number etc.</strong>"}}}
{{#form_select title="Type" name="type" selected=type required=true}}
    <option value="">Choose...</option>
    <option value="Cheque">Cheque</option>
    <option value="Money Order">Money Order</option>
    <option value="Invoice">Invoice</option>
    <option value="Credit Card">Credit Card</option>
    <option value="Paypal">Paypal</option>
    <option value="Waived">Waived</option>
{{/form_select}}
{{{form_textarea title="Description" name="description" type="text" value=description
    description="<strong>Do not put credit card numbers etc in here.</strong>"}}}
<script>
    $(function () {
        $("input[type='date']").datepicker({
            format: "mm/dd/yyyy",
            startView: 2,
        });
    });
</script>
