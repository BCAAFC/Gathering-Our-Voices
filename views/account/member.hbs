{{#if member}}
    {{#if member.complete}}
        <h3>Workshops</h3>
        <table class="table">
            <thead>
                <th>Title</th>
                <th>Start</th>
                <th>End</th>
                <th>Room</th>
                <th>Venue</th>
            </thead>
            <tbody>
                {{#each member.Sessions}}
                    <tr>
                        <td><a href="/workshops/{{Workshop.id}}">{{Workshop.title}}</a></td>
                        <td>{{datetime start}}</td>
                        <td>{{time end}}</td>
                        <td>{{room}}</td>
                        <td>{{venue}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="alert alert-warning">
            This member is not complete, and is currently unable to sign up for
            workshops. Please complete their information below.
        </div>
    {{/if}}
{{/if}}

{{> forms/member member=member flags=flags}}
